    <!-- Header -->
    <header class="transition header">
        <div class="parallax aboutMeHeader">
            <div class="darker"></div>
        </div>
        <!-- Main menu -->
        <%- include ./common/menu.ejs %>
        <!-- /Main menu -->
        <div class="item-category">
            <h1>about</h1>
            <div class="border">
                <div></div>
            </div>
        </div>
    </header>
    <!-- /Header -->

    <!--Content-->
    <div class="content">

        <!-- Row -->
        <div class="row">
            <div class="col-md6 col-sm-6 col-xs-12">
                <img src="/images/about-me.jpg" alt="Image description"/>
            </div>
            <div class="col-md6 col-sm-6 col-xs-12">
                <h3>Bogdan Aleksandrov Photography</h3>
                <p>
                    Hi! My name is Bogdan Aleksandrov and I love photography. But you probably already knew that...
